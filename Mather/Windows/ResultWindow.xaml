<Window x:Class="Mather.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mather"
        mc:Ignorable="d"
        Title="ResultWindow" Height="300" Width="500">
    <Grid  Margin="8 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" FontSize="32" VerticalAlignment="Center">Ваша оценка:</TextBlock>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="128" VerticalAlignment="Center" x:Name="MarkTextBlock"></TextBlock>
        <Button Content="OK" Grid.Row="4" HorizontalAlignment="Right" Width="64" Height="24" Click="Button_Click"/>
    </Grid>
</Window>
