<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Shadow">
        <Setter Property="FrameworkElement.Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FFDADADA" ShadowDepth="8" BlurRadius="4"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>