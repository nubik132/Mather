<Window x:Class="Mather.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mather"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MaxWidth="300" MinWidth="150"/>
            <ColumnDefinition Width="3" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto"  ClipToBounds="True">
            <StackPanel x:Name="StatesContainer">
                <TreeView x:Name="StatesTreeView">
                    <TreeViewItem Header="TitleTitleTitleTitleTitleTitleTitleTitleTitleTitle" Name="StateItem1">
                        <TreeViewItem Header="Title 2">
                            <TextBlock>Текст 1</TextBlock>
                        </TreeViewItem>
                    </TreeViewItem>
                </TreeView>
            </StackPanel>
        </ScrollViewer>
        <GridSplitter Width="3" Grid.Column="1" Background="#FF9C9C9C"/>
        <FlowDocumentScrollViewer x:Name="DocumentViewer" Grid.Column="2"/>
    </Grid>
</Window>
