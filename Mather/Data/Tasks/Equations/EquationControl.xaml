<UserControl x:Class="Mather.Data.Tasks.Equations.EquationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mather.Data.Tasks.Equations"
             xmlns:math="clr-namespace:WpfMath.Controls;assembly=WpfMath"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="EquationButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontSize" Value="32"/>
        </Style>
        <ContextMenu x:Key="OperationContextMenu">
            <MenuItem Header="Добавить" Click="AddOperationContext_Click" />
            <MenuItem Header="Удалить" Click="RemoveOperationContext_Click" />
        </ContextMenu>
    </UserControl.Resources>
    <Grid>
        <StackPanel >
            <StackPanel Orientation="Horizontal" x:Name="EquationPanel" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
