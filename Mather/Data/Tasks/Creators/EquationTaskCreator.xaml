<UserControl x:Class="Mather.Data.Tasks.Creators.EquationTaskCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mather.Data.Tasks.Creators"
             xmlns:Equations="clr-namespace:Mather.Data.Tasks.Equations"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Equations:EquationControl Equation="{Binding Equation}" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="x:" FontSize="32" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="AnswerTextbox" TextChanged="AnswerTextbox_TextChanged" PreviewTextInput="AnswerTextbox_PreviewTextInput"/>
        </Grid>
    </Grid>
</UserControl>
